{
  // 참고: https://typescript-kr.github.io/pages/Compiler%20Options.html
  "compilerOptions": {
    /** 컴파일 타겟 버전 */
    "target": "esnext",

    /** 모듈 시스템 관련 */
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    /** Javscript 관련 */
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,

    /** 로컬 변수 관련 */
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /** 소스맵 관련 */
    "sourceMap": true,
    "sourceRoot": "/",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
